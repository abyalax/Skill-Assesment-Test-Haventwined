{
    "compilerOptions": {
        "allowJs": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "preserve",
        "jsxImportSource": "vue",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "strict": true,
        "isolatedModules": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "skipLibCheck": true,
        "types": [
            "vite/client",
            "element-plus/global"
        ],
        "paths": {
            "@/*": [
                "./resources/js/*"
            ],
            "ziggy-js": [
                "./vendor/tightenco/ziggy"
            ],
        },
    },
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/**/*.ts",
        "resources/js/**/**/**/*.ts",
        "resources/js/**/*.d.ts",
        "resources/js/**/*.vue",
        "resources/js/**/**/*.vue",
        "resources/js/types/**/*.d.ts",
    ],
}